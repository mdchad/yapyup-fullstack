{
  "name": "yapyup-fullstack",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "catalog": {
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "postcss": "^8.5.3",
      "@types/node": "^22.13.13",
      "@types/react": "^19.0.12",
      "@types/react-dom": "^19.0.4",
      "tailwindcss": "^4.0.15",
      "tailwind-merge": "^2.6.0",
      "tailwindcss-animate": "^1.0.7",
      "tw-animate-css": "^1.2.5",
      "sonner": "^1.7.4",
      "clsx": "^2.1.1",
      "class-variance-authority": "^0.7.1",
      "lucide-react": "^0.473.0",
      "motion": "^12.16.0",
      "next-themes": "^0.4.6",
      "react-hook-form": "^7.54.2",
      "react-use-measure": "^2.1.7",
      "@tailwindcss/postcss": "^4.1.10",
      "wrangler": "^4.20.0"
    }
  },
  "scripts": {
    "prepare": "husky",
    "dev": "turbo dev",
    "dev:webapp": "turbo -F web -F server dev",
    "build": "turbo build",
    "build:web": "turbo -F web build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "db:generate": "turbo -F server db:generate",
    "db:migrate": "turbo -F server db:migrate",
    "deploy:web": "turbo -F web deploy",
    "clean": "rm -rf bun.lock node_modules apps/web/node_modules apps/server/node_modules "
  },
  "dependencies": {},
  "devDependencies": {
    "@tanstack/router-plugin": "^1.121.16",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "turbo": "^2.5.4"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "prettier --ignore-unknown --write\" ."
    ]
  },
  "packageManager": "bun@1.2.15"
}
